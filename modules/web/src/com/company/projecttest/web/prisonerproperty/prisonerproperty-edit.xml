<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.projecttest.web.prisonerproperty.PrisonerpropertyEdit"
        datasource="prisonerpropertyDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.projecttest.web.prisonerproperty">
    <dsContext>
        <datasource id="prisonerpropertyDs"
                    class="com.company.projecttest.entity.Prisonerproperty"
                    view="prisonerproperty-view"/>
        <collectionDatasource id="prisonersDs"
                              class="com.company.projecttest.entity.Prisoner"
                              view="prisoner-view_1">
            <query>
                <![CDATA[select e from projecttest$Prisoner e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="prisonerpropertyDs">
            <column width="250px">
                <field property="propertyname"/>
                <field property="serialnumber"/>
                <field property="prisoner"/>
                <field cols="10"
                       property="description"
                       rows="5"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
