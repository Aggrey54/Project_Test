<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.projecttest.web.prisoner.PrisonerEdit"
        datasource="prisonerDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.projecttest.web.prisoner">
    <dsContext>
        <datasource id="prisonerDs"
                    class="com.company.projecttest.entity.Prisoner"
                    view="prisoner-view_1">
            <collectionDatasource id="prisonerPropertyDs"
                                  property="prisonerProperty"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="prisonerDs">
            <column width="250px">
                <field property="name"/>
                <field property="gender"/>
                <field property="idNumber"/>
                <field property="dateOfBirth"/>
            </column>
        </fieldGroup>
        <groupBox id="prisonerPropertyBox"
                  caption="msg://com.company.projecttest.entity/Prisoner.prisonerProperty">
            <table id="prisonerPropertyTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="create"/>
                    <action id="edit"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="propertyname"/>
                    <column id="serialnumber"/>
                </columns>
                <rows datasource="prisonerPropertyDs"/>
                <buttonsPanel>
                    <button action="prisonerPropertyTable.create"/>
                    <button action="prisonerPropertyTable.edit"/>
                    <button action="prisonerPropertyTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
