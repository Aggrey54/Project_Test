<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.company.projecttest.web.nextofkin.NextofKinBrowse"
        focusComponent="nextofKinsTable"
        lookupComponent="nextofKinsTable"
        messagesPack="com.company.projecttest.web.nextofkin">
    <dsContext>
        <groupDatasource id="nextofKinsDs"
                         class="com.company.projecttest.entity.NextofKin"
                         view="_local">
            <query>
                <![CDATA[select e from projecttest$NextofKin e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="nextofKinsTable"
            spacing="true">
        <filter id="filter"
                applyTo="nextofKinsTable"
                datasource="nextofKinsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="nextofKinsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="idNumber"/>
                <column id="relationship"/>
                <column id="phoneNumber"/>
                <column id="physicalAddress"/>
            </columns>
            <rows datasource="nextofKinsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="nextofKinsTable.create"/>
                <button id="editBtn"
                        action="nextofKinsTable.edit"/>
                <button id="removeBtn"
                        action="nextofKinsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
